<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

    <ImageView
        android:id="@+id/ivLoginSplashImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/img_desc"
        android:src="@drawable/elverion_splash" />

    <LinearLayout
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/ivLoginSplashImage"
        android:layout_alignRight="@id/ivLoginSplashImage"
        android:layout_below="@id/ivLoginSplashImage"
        android:layout_width="wrap_content">

        <EditText
            android:id="@+id/etLoginUser"
            android:singleLine="true"
            style="@style/LoginEditBox"
            android:hint="user"
            android:layout_weight="5" />

        <EditText
            android:id="@+id/etLoginPass"
            style="@style/LoginEditBox"
            android:hint="pass"
            android:inputType="textPassword"
            android:layout_weight="5" />

        <Button
            android:id="@+id/bLoginSubmit"
            style="@style/LoginButton"
            android:layout_weight="2"
            android:gravity="center"
            android:text="LOGIN" />
    </LinearLayout>

</RelativeLayout>